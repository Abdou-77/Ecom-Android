<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.ElegantTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentSearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/soft_grey</item>
        <item name="android:textColor">@color/deep_navy</item>
    </style>

    <style name="RoundedSearchBar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="RoundedFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources> 